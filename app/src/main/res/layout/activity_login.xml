<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loginbackgroud"
    android:orientation="vertical"
    tools:context=".login.activity.LoginActivity">

    <EditText
        android:drawableLeft="@mipmap/register_icon_phone_n_xxhdpi"
        android:id="@+id/edName"
        android:textColor="#fff"
        android:layout_marginLeft="25dp"
        android:background="@drawable/edit_bottom_line"
        android:layout_width="510dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginTop="160dp"
        android:hint="手机号"
        android:inputType="phone"
        android:padding="10dp"
        android:drawablePadding="15dp"
        android:textColorHint="#fff"
        android:textSize="20sp" />
    <View
        android:layout_below="@id/edName"
        android:layout_width="600dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="36dp"
        android:layout_height="1dp"></View>
    <EditText
        android:textColor="#fff"
        android:id="@+id/edPwd"
        android:background="@drawable/edit_bottom_line"
        android:layout_below="@id/edName"
        android:drawableLeft="@mipmap/register_icon_lock_n_xxhdpi"
        android:layout_width="510dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:drawablePadding="10dp"
        android:hint="登录密码"
        android:inputType="numberPassword"
        android:paddingLeft="15dp"
        android:padding="10dp"
        android:textColorHint="#fff"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/is_eyes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/viewone"
        android:layout_centerVertical="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="36dp"
        android:layout_toRightOf="@id/edPwd"
        android:background="@mipmap/login_icon_eye_n_xxhdpi"
        />
    <View
        android:id="@+id/viewone"
        android:layout_below="@id/edPwd"
        android:layout_width="600dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="36dp"
        android:layout_height="1dp"></View>
        <CheckBox
            android:textSize="14sp"
            android:buttonTint="#fff"
            android:layout_marginTop="20dp"
            android:layout_below="@id/edPwd"
            android:id="@+id/remember"
            android:layout_marginLeft="36dp"
            android:textColor="#efefef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码" />
    <TextView
        android:layout_marginTop="23dp"
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edPwd"
        android:layout_alignParentRight="true"
        android:layout_marginRight="36dp"
        android:text="快速注册"
        android:background="@null"
        android:textSize="15sp"
        android:textColor="#efefef" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@id/remember"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="85dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_red_rec_raduis"
        android:text="登录"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:textSize="18sp"
        android:textColor="#ff5f92"
        />

</RelativeLayout>
