<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.home.homemainfragment.HomeMainFragment">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/menu_iamge"
            android:layout_marginLeft="25dp"
            android:background="@mipmap/common_nav_btn_menu_n_xxhdpi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.gx.tianba.fragment.home.myview.SearchView
            android:id="@+id/search_view"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></com.gx.tianba.fragment.home.myview.SearchView>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_ryl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                ></android.support.v7.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:background="#f2f2f2"
                android:layout_height="100dp"></View>
        </LinearLayout>

    </ScrollView>


</LinearLayout>