<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".regis.activity.RegisterActivity">
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/regis_back"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:contentDescription="后退"
            android:layout_centerVertical="true"
            android:layout_width="16dp"
            android:layout_height="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册页面"
            android:textColor="#232121"
            android:textSize="16dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#5456" />
    <LinearLayout
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="用户名:"
            />
        <EditText
            android:id="@+id/regis_edit_username"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_red_rec_raidus_10"
            android:layout_width="match_parent"
            android:textSize="18dp"
            android:hint="请输入用户名"
            android:layout_height="35dp" />
        <android.support.v4.widget.Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="密     码:"
            />
        <EditText
            android:id="@+id/regis_edit_password"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:layout_marginLeft="15dp"
            android:textSize="18dp"
            android:hint="请输入密码"
            android:background="@drawable/shape_red_rec_raidus_10"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
        <android.support.v4.widget.Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="性     别:"
            />
        <EditText
            android:id="@+id/regis_edit_sex"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:textSize="18dp"
            android:hint="请输入性别"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_red_rec_raidus_10"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
        <android.support.v4.widget.Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="年     龄:"
            />
        <EditText
            android:id="@+id/regis_edit_age"
            android:layout_weight="1"
            android:textSize="18dp"
            android:hint="请输入年龄"
            android:paddingLeft="5dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_red_rec_raidus_10"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
        <android.support.v4.widget.Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="20sp"
            android:layout_marginLeft="44dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="手 机 号:"
            />
        <EditText
            android:id="@+id/regis_edit_mobile"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:layout_marginLeft="15dp"
            android:textSize="18dp"
            android:hint="请输入手机号"
            android:background="@drawable/shape_red_rec_raidus_10"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
        <android.support.v4.widget.Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/regis_button"
            android:hint="注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>