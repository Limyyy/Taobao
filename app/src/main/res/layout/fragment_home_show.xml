<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_show_ryl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:alpha="0.5"
        android:background="#aeaeae"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lay111"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:background="#aeaeae"
            android:id="@+id/home_show_image_tui"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_arrow_back_black_24dp"/>
        <LinearLayout
            android:background="#aeaeae"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/layour1"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:background="#aeaeae"
                    android:text="商品"
                    android:id="@+id/home_show_up_goods"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <View
                    android:id="@+id/home_show_up_goods_view"
                    android:background="#f2597c"
                    android:layout_width="36dp"
                    android:layout_height="3dp"></View>
            </LinearLayout>
            <android.support.v4.widget.Space
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:background="#aeaeae"
                    android:text="详情"
                    android:id="@+id/home_show_up_details"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <View
                    android:id="@+id/home_show_up_details_view"
                    android:background="#aeaeae"
                    android:layout_width="36dp"
                    android:layout_height="3dp"></View>
            </LinearLayout>
            <android.support.v4.widget.Space
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:background="#c3c3c3"
                    android:text="评价"
                    android:id="@+id/home_show_up_evaluate"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <View
                    android:id="@+id/home_show_up_evaluate_view"
                    android:background="#aeaeae"
                    android:layout_width="36dp"
                    android:layout_height="3dp"></View>
            </LinearLayout>
            <android.support.v4.widget.Space
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>